{
	"compilerOptions": {
	  "target": "ES2020",
	  "outDir": "./build",
	  "lib": ["ESNext"],
	  "allowJs": true,
	  "skipLibCheck": true,
	  "strict": true,
	  "esModuleInterop": true,
	  "module": "es2020",
	  "moduleResolution": "bundler",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "jsx": "preserve",
	  "incremental": true
	},
	"include": ["./server.ts", "db/**/*.ts", "middleware/**/*.ts", "models/**/*.ts", "../global.d.ts", "database.d.ts"],
	"exclude": ["node_modules", "db/**/*.model.ts", "src"]
  }
  